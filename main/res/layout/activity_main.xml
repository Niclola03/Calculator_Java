<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:maxLength="11"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"></TextView>

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/input"
        android:layout_marginTop="75dp"
        android:autoSizeTextType="uniform"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/input"
        tools:layout_editor_absoluteX="16dp"></TextView>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="125dp"
    android:textAlignment="textEnd">
    <TextView
        android:id="@+id/histories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:scrollbars="vertical"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="25sp"></TextView>
</ScrollView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:ignore="MissingConstraints"
        android:layout_alignParentBottom="true"
        android:id="@+id/atas"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:padding="3dp"
            android:id="@+id/bawah"
            >

            <LinearLayout
                android:id="@+id/kesamping5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/division"
                    android:backgroundTint="@color/orange"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/divide"
                    android:textSize="30dp" />


                <Button
                    android:id="@+id/percentage"
                    android:backgroundTint="@color/orange"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:padding="3dp"
                    android:text="%"
                    android:textSize="30dp" />
                <Button
                    android:id="@+id/history"
                    android:backgroundTint="@color/orange"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:padding="3dp"
                    android:text="@string/history"
                    android:textSize="30dp" />
                <ImageButton
                    android:id="@+id/backspace"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_backspace"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/kesamping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/numbseven"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="7"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/numbeight"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="8"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/numbnine"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="9"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/optimes"
                    android:backgroundTint="@color/orange"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="Ã—"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/numbfour"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="4"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/numbfive"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="5"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/numbsix"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="6"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/opminus"
                    android:backgroundTint="@color/orange"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="-"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="3dp">
                <Button
                    android:id="@+id/numbone"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="1"
                    android:textSize="30dp" />


                <Button
                    android:id="@+id/numbtwo"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="2"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/numbthree"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="3"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/opplus"
                    android:backgroundTint="@color/orange"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="+"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/opC"
                    android:backgroundTint="@color/light_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="AC"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/numbzero"
                    android:backgroundTint="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="0"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/opdot"
                    android:backgroundTint="@color/light_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="."
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/opequal"
                    android:backgroundTint="@color/light_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:text="="
                    android:textSize="30dp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>